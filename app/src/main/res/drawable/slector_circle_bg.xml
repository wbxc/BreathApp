<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5px" />
            <stroke android:width="1dip" android:color="@color/app_title_pressed_color" />
            <solid android:color="@color/app_title_pressed_color" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dip"></corners>

            <stroke android:width="1dip" android:color="@color/common_top_color" />

            <solid android:color="@color/common_top_color" />
        </shape>
    </item>

    </selector>