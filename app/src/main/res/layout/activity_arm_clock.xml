<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:id="@+id/allLayout"
    tools:context="com.hhd.breath.app.view.ui.ArmClockActivity">

    <include layout="@layout/common_login_top"  android:id="@+id/top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layoutSwitch"
        android:layout_below="@+id/top"
        android:layout_marginTop="@dimen/common_dian10"
        android:visibility="gone"
        android:layout_height="@dimen/common_dian50">
        <TextView
            android:layout_width="wrap_content"
            android:text="开关"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/common_dian20"
            android:textSize="@dimen/common_text_14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/common_color_9A9A9A"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/imgSwitchClock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_dian30"
            android:background="@mipmap/icon_switch_on"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutSwitch"
        android:layout_marginLeft="@dimen/common_dian15"
        android:layout_marginRight="@dimen/common_dian15"
        android:background="@color/common_bottom_text_color"
        android:layout_height="0.5dip" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/layoutSwitch"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/layoutRepeat"
            android:layout_height="@dimen/common_dian50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重复"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/common_dian20"
                android:textSize="@dimen/common_text_14sp"
                android:id="@+id/tv1"
                android:textColor="@color/common_color_9A9A9A"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRepeat"
                android:textSize="@dimen/common_text_14sp"
                android:layout_toLeftOf="@+id/img2"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_dian5"
                android:textColor="@color/common_bottom_text_color"
                android:text=""/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/img2"
                android:layout_marginRight="@dimen/common_dian20"
                android:src="@mipmap/icon_common_go_detail"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/common_dian15"
            android:layout_marginRight="@dimen/common_dian15"
            android:background="@color/common_bottom_text_color"
            android:layout_height="0.5dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/layoutBellWay"
            android:layout_height="@dimen/common_dian50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_dian20"
                android:textSize="@dimen/common_text_14sp"
                android:textColor="@color/common_color_9A9A9A"

                android:text="铃声"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_dian20"
                android:textSize="@dimen/common_text_14sp"
                android:textColor="@color/common_bottom_text_color"
                android:layout_marginRight="@dimen/common_dian5"
                android:id="@+id/tvBellWay"
                android:layout_toLeftOf="@+id/img1"
                android:text=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/img1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_dian20"
                android:src="@mipmap/icon_common_go_detail"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/common_dian15"
            android:layout_marginRight="@dimen/common_dian15"
            android:background="@color/common_bottom_text_color"
            android:layout_height="0.5dip" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/layoutSetTime"
            android:layout_height="@dimen/common_dian50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_dian20"
                android:textSize="@dimen/common_text_14sp"
                android:textColor="@color/common_color_9A9A9A"
                android:text="时间"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/common_text_14sp"
                android:layout_centerVertical="true"
                android:text=""
                android:id="@+id/tvSetTime"
                android:layout_marginRight="@dimen/common_dian5"
                android:layout_toLeftOf="@+id/img3"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/img3"
                android:layout_marginRight="@dimen/common_dian20"
                android:src="@mipmap/icon_common_go_detail"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/common_dian15"
            android:layout_marginRight="@dimen/common_dian15"
            android:background="@color/common_bottom_text_color"
            android:layout_height="0.5dip" />
    </LinearLayout>
</RelativeLayout>
