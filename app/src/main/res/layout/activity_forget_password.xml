<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.hhd.breath.app.main.ui.ForgetPasswordActivity">
    <include layout="@layout/common_login_top"  android:id="@+id/layoutTop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_dian30"
        android:layout_below="@+id/layoutTop"
        android:id="@+id/layoutPhone"
        android:layout_marginRight="@dimen/common_dian15"
        android:layout_marginLeft="@dimen/common_dian15"
        android:layout_height="@dimen/common_dian39">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textColor="@color/common_color_343434"
            android:textSize="16sp"
            android:inputType="number"
            android:id="@+id/edit_phone"
            android:textColorHint="@color/common_bottom_text_color"
            android:layout_toLeftOf="@+id/layout_delete_name"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="请输入您注册时的手机号"/>
        <RelativeLayout
            android:layout_width="@dimen/common_dian39"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:id="@+id/layout_delete_name"
            android:layout_height="@dimen/common_dian39">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_username_delete"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:id="@+id/view1"
        android:layout_marginRight="@dimen/common_dian15"
        android:layout_marginLeft="@dimen/common_dian15"
        android:layout_below="@+id/layoutPhone"
        android:background="@color/common_bottom_text_color"/>


    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/view1"
        android:layout_marginTop="@dimen/common_dian30"
        android:background="@drawable/common_btn_select"
        android:text="@string/string_login"
        android:textSize="18sp"
        android:layout_marginRight="@dimen/common_dian15"
        android:layout_marginLeft="@dimen/common_dian15"
        android:textColor="@color/white"
        android:id="@+id/btnGetCheckCode"
        android:layout_height="@dimen/common_dian44"/>
</RelativeLayout>
