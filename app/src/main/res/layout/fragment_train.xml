<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                android:background="@color/common_color_d5d5d5"
             tools:context="com.hhd.breath.app.fragment.TrainFragment">
    <include layout="@layout/top_layout"
             android:id="@+id/top" />
    <RelativeLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:id="@+id/breath_chuji"
           android:paddingBottom="10dp"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@mipmap/icon_train_primary">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="20dp"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="缩唇呼吸训练"
                       android:id="@+id/text1"
                       android:textSize="25sp"
                       android:textStyle="bold"
                       android:textColor="@color/white"/>
                   <TextView
                       android:layout_below="@+id/text1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="初级"
                       android:textSize="16sp"
                       android:textColor="@color/white"/>
               </RelativeLayout>
           </RelativeLayout>
       </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/breath_chuji"
            android:layout_width="match_parent"
            android:id="@+id/breath_zhongji"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_train_middle">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="缩唇呼吸训练"
                        android:id="@+id/text2"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_below="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中级"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
