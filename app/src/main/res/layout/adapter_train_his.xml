<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="2015.11.23"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:id="@+id/today_time"
            android:textColor="@color/common_color_9A9A9A"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_below="@+id/today_time"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/common_color_d5d5d5"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.hhd.breath.app.widget.MyListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_second">
        </com.hhd.breath.app.widget.MyListView>
    </LinearLayout>
</LinearLayout>