<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.hhd.breath.app.main.ui.SettingPassActivity">

    <include layout="@layout/common_login_top" android:id="@+id/layoutTop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutTop"
        android:layout_marginLeft="@dimen/common_dian30"
        android:layout_marginRight="@dimen/common_dian30"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:layout_marginTop="@dimen/common_dian20"
            android:id="@+id/tv1"
            android:textSize="@dimen/common_text_16sp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/common_top_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/tv1"
            android:id="@+id/layout1"
            android:layout_marginTop="@dimen/common_dian10"
            android:layout_height="@dimen/common_dian44">
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_centerVertical="true"
                android:id="@+id/editNewPass"
                android:inputType="textPassword"
                android:textColorHint="@color/common_bottom_text_color"
                android:textSize="@dimen/common_text_16sp"
                android:singleLine="true"
                android:hint="请输入6-18位新密码"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/layout1"
            android:layout_width="match_parent"
            android:id="@+id/layout2"
            android:layout_marginTop="@dimen/common_dian5"
            android:layout_height="@dimen/common_dian44">
            <EditText
                android:layout_width="match_parent"
                android:textSize="@dimen/common_text_16sp"
                android:textColorHint="@color/common_bottom_text_color"
                android:hint="请再次输入密码"
                android:background="@null"
                android:id="@+id/editOkPass"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="@dimen/common_dian30"
            android:background="@drawable/common_btn_select"
            android:text="@string/string_login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/btnSubmit"
            android:layout_height="@dimen/common_dian44"/>

    </RelativeLayout>
</RelativeLayout>
