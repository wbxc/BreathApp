<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/common_dian30"
        android:background="@drawable/layout_ovl_dialog"
        android:layout_marginBottom="@dimen/common_dian10"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/common_dian15"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_dialog_train"
            android:id="@+id/imgDialog"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="太棒了,是否保存数据?"
            android:id="@+id/tvShow"
            android:layout_below="@+id/imgDialog"
            android:textSize="@dimen/common_text_16sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/common_dian20"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/tvShow"
            android:layout_marginTop="@dimen/common_dian20"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dip"
                android:layout_weight="1"
                android:id="@+id/btnSave"
                android:text="保存"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/common_text_16sp"
                android:background="@drawable/btn_save_ovl"
                android:layout_height="@dimen/common_dian50"/>
            <Button
                android:layout_width="0dip"
                android:layout_weight="1"
                android:id="@+id/btnNoSave"
                android:textSize="@dimen/common_text_16sp"
                android:text="放弃"
                android:textColor="@color/white"
                android:background="@drawable/btn_no_save_ovl"
                android:layout_height="@dimen/common_dian50"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>