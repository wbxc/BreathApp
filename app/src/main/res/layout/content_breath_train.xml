<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hhd.breath.app.main.ui.BreathTrainActivity"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        layout="@layout/common_login_top"
        android:id="@+id/top"/>
    <ScrollView
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_above="@+id/bootom_view"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test_xunlian"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dip"
                    android:id="@+id/name_top"
                    android:layout_height="@dimen/common_dian44">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:text="缩唇呼吸训练"
                        android:textColor="@color/common_top_color"
                        android:textSize="22sp"
                        android:id="@+id/train_name"
                        android:layout_marginLeft="15dip"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_top"
                    android:layout_marginTop="@dimen/common_dian20"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_dian15"
                        android:layout_marginRight="@dimen/common_dian10"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/layoutTimeLong"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_dian39"
                            android:background="@mipmap/icon_report_left">

                            <TextView
                                android:id="@+id/tvTimeLongLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dip"
                                android:layout_centerVertical="true"
                                android:text="训练\n时长"
                                android:textColor="@color/white"
                                android:textSize="@dimen/common_text_14sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tvTimeLongLeft"
                                android:gravity="center"

                                android:id="@+id/time_long"
                                android:text="01:30"
                                android:textColor="@color/common_top_color"
                                android:textSize="@dimen/common_text_20sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutGroupNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_dian39"
                            android:layout_below="@+id/layoutTimeLong"
                            android:layout_marginTop="@dimen/common_dian15"
                            android:background="@mipmap/icon_report_left">

                            <TextView
                                android:id="@+id/tvGroupsNumberLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="呼吸\n组数"
                                android:textColor="@color/white"
                                android:layout_marginLeft="3dip"
                                android:textSize="@dimen/common_text_14sp"/>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tvGroupsNumberLeft"
                                android:gravity="center"
                                android:text="300"
                                android:id="@+id/zushuo"

                                android:textColor="@color/color_nobreath_bg"
                                android:textSize="@dimen/common_text_20sp"/>


                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="93dip"
                        android:layout_marginLeft="@dimen/common_dian10"
                        android:layout_marginRight="@dimen/common_dian15"
                        android:layout_weight="1"
                        android:background="@mipmap/icon_report_right">

                        <TextView
                            android:id="@+id/tvDifficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dip"
                            android:text="当\n前\n难\n度"
                            android:textColor="@color/white"
                            android:textSize="@dimen/common_text_14sp"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/common_dian25"
                            android:layout_toRightOf="@+id/tvDifficulty"
                            android:id="@+id/layoutLevelContent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/level"
                                android:textColor="@color/common_top_color"
                                android:textSize="16sp"
                                android:text="Level"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/level"
                                android:id="@+id/tvLevelFlag"
                                android:textColor="@color/common_top_color"
                                android:textSize="20sp"
                                android:layout_height="wrap_content"
                                android:text="高级"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="@color/common_top_color"
                                android:textSize="38sp"
                                android:layout_marginLeft="@dimen/common_dian10"
                                android:layout_toRightOf="@+id/tvLevelFlag"
                                android:id="@+id/tvLevelValue"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/common_top_color"
                                android:textSize="12sp"
                                android:id="@+id/tvLookIntroductions"
                                android:layout_below="@+id/tvLevelFlag"
                                android:layout_marginTop="@dimen/common_dian5"
                                android:layout_height="wrap_content"
                                android:text="查看难度说明 >"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="训练说明:"
                    android:layout_marginTop="5dip"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:id="@+id/trainInfo"
                    android:textColor="@color/common_top_color"
                    android:layout_height="@dimen/common_dian46"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/text_breathExplain"
                android:textColor="@color/common_train_plan_text_color"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/bootom_view"
        android:layout_height="@dimen/common_dian50">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/common_top_color"
            android:id="@+id/error_connect"
            android:layout_height="@dimen/common_dian50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="未连接呼吸器"/>
            <RelativeLayout
                android:layout_width="@dimen/common_dian50"
                android:id="@+id/connect_train_qi"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_height="@dimen/common_dian50">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_connect_train_qi"
                    android:src="@drawable/select_wen_bg"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/start_train"
            android:visibility="gone"
            android:background="@drawable/select_bootom_bg"
            android:layout_height="@dimen/common_dian50">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/string_jinxing_train"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
