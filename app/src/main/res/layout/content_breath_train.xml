<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hhd.breath.app.main.ui.BreathTrainActivity"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        layout="@layout/common_login_top"
        android:id="@+id/top"/>
    <ScrollView
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_above="@+id/bootom_view"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test_xunlian"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dip"
                    android:id="@+id/name_top"
                    android:layout_height="@dimen/common_dian44">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:text="缩唇呼吸训练"
                        android:textColor="@color/common_color_343434"
                        android:textSize="22sp"
                        android:id="@+id/train_name"
                        android:layout_marginLeft="15dip"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@+id/name_top"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:textColor="@color/common_top_color"
                            android:textSize="25sp"
                            android:text="01:30"
                            android:id="@+id/time_long"
                            android:gravity="center"
                            android:layout_height="@dimen/common_dian39"/>
                        <TextView
                            android:layout_below="@+id/time_long"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="训练时长"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:textColor="@color/common_train_plan_text_color"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_gravity="center_vertical"
                        android:background="@color/common_bottom_text_color"
                        android:layout_height="@dimen/common_dian39"/>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:textColor="@color/common_top_color"
                            android:textSize="25sp"
                            android:text="30"
                            android:gravity="center"
                            android:id="@+id/zushuo"
                            android:layout_height="@dimen/common_dian39"/>
                        <TextView
                            android:layout_below="@+id/zushuo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="动作组数"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:textColor="@color/common_train_plan_text_color"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="1dip"
                        android:background="@color/common_bottom_text_color"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/common_dian39"/>
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:id="@+id/ratingbar_re"
                            android:layout_height="@dimen/common_dian39">
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/roomRatingBar"
                                android:id="@+id/ratingbar"
                                android:rating="3"
                                android:isIndicator="true"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:numStars="5"
                                />
                        </RelativeLayout>

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ratingbar_re"
                            android:textColor="@color/common_train_plan_text_color"
                            android:textSize="14sp"
                            android:text="难度系数"/>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="训练说明:"
                    android:layout_marginTop="5dip"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:id="@+id/trainInfo"
                    android:textColor="@color/common_top_color"
                    android:layout_height="@dimen/common_dian46"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/text_breathExplain"
                android:textColor="@color/common_train_plan_text_color"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/bootom_view"
        android:layout_height="@dimen/common_dian50">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/common_top_color"
            android:id="@+id/error_connect"
            android:layout_height="@dimen/common_dian50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="未连接呼吸器"/>
            <RelativeLayout
                android:layout_width="@dimen/common_dian50"
                android:id="@+id/connect_train_qi"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_height="@dimen/common_dian50">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_connect_train_qi"
                    android:src="@drawable/select_wen_bg"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/start_train"
            android:visibility="gone"
            android:background="@drawable/select_bootom_bg"
            android:layout_height="@dimen/common_dian50">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/string_jinxing_train"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
