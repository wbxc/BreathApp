<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hhd.breath.app.main.ui.RegisterBreathActivity">
    <include layout="@layout/common_login_top" android:id="@+id/topLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/common_dian30"
        android:layout_marginRight="@dimen/common_dian30"
        android:orientation="vertical"
        android:layout_below="@+id/topLayout"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="@dimen/common_dian39">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="16sp"
                android:singleLine="true"
                android:id="@+id/edit_username"
                android:textColorHint="@color/common_bottom_text_color"
                android:textColor="@color/common_color_343434"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:hint="请输入手机号"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/common_bottom_text_color"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="@dimen/common_dian39">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="16sp"
                android:singleLine="true"
                android:id="@+id/edit_password"
                android:textColorHint="@color/common_bottom_text_color"
                android:textColor="@color/common_color_343434"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:hint="请输入密码"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/common_bottom_text_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/common_dian30"
            android:orientation="horizontal"
            android:layout_height="@dimen/common_dian40">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/common_dian10"
                android:layout_marginRight="@dimen/common_dian10"
                android:id="@+id/edit_verification"
                android:inputType="number"
                android:textSize="@dimen/common_text_16sp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_16sp"
                android:id="@+id/btn_verification"
                android:background="@drawable/common_select"
                android:layout_marginRight="@dimen/common_dian10"
                android:layout_marginLeft="@dimen/common_dian10"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/common_btn_select"
            android:layout_marginTop="@dimen/common_dian40"
            android:id="@+id/layout_register"
            android:layout_height="@dimen/common_dian44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_18sp"
                android:text="注册"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
