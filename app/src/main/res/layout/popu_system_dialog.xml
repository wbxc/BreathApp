<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_height="match_parent">

    <com.hhd.breath.app.widget.WheelView
        android:id="@+id/wheel_view_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.hhd.breath.app.widget.WheelView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dian43"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/common_dian43"
        android:layout_marginRight="@dimen/common_dian43"
        android:layout_marginTop="10dip"
        android:background="@drawable/slector_circle_bg" >
        <Button
            android:id="@+id/queding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dian43"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
