<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/common_dian10"
        android:background="@drawable/layout_ovl_dialog"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_dialog_closed"
            android:id="@+id/imgDialogClose"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgSuccess"
            android:layout_below="@+id/imgDialogClose"
            android:src="@mipmap/icon_dialog_train"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/imgSuccess"
            android:layout_marginTop="@dimen/common_dian20"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvShow"
            android:textSize="@dimen/common_text_16sp"
            android:text="太棒了,您已经完成了训练!"/>
        <Button
            android:layout_width="match_parent"
            android:layout_below="@+id/tvShow"
            android:layout_marginTop="@dimen/common_dian20"
            android:layout_height="@dimen/common_dian50"
            android:textSize="@dimen/common_text_18sp"
            android:text="查看训练报告"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btnTrainEnd"
            android:background="@drawable/btn_train_success"/>
    </RelativeLayout>

</RelativeLayout>