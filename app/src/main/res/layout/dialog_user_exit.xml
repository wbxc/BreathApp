<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/transparent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/common_layout_circle"
        android:paddingBottom="@dimen/common_dian10"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/common_dian30"
            android:layout_marginBottom="@dimen/common_dian20"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您是否要注销当前账号？"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/common_text_18sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/color_liner_bg"
            android:layout_height="0.5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_dian20"

            android:layout_height="@dimen/common_dian44">
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/common_dian10"
                android:layout_marginRight="@dimen/common_dian5"
                android:id="@+id/layout_user_exit"
                android:background="@drawable/select_circle_button_bg"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_16sp"
                    android:text="@string/string_train_exit_ok"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/common_dian5"
                android:layout_marginRight="@dimen/common_dian10"
                android:background="@drawable/select_circle_button_bg"
                android:id="@+id/layout_user_unexit"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_16sp"
                    android:text="@string/string_train_exit_no"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>