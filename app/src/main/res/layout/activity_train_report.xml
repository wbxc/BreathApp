            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dian15"
                android:layout_marginTop="@dimen/common_dian25"
                android:drawableLeft="@mipmap/icon_report_his"
