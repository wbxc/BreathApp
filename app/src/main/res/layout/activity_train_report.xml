                        android:text=""
                        android:id="@+id/tv3"
                        android:textColor="@color/common_top_color"
                        android:textSize="@dimen/common_text_18sp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/common_top_color"/>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_dian39"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/common_top_color"
                        android:textSize="@dimen/common_text_14sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/common_top_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:id="@+id/tv4"
                        android:textColor="@color/common_top_color"
                        android:textSize="@dimen/common_text_18sp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/common_top_color"/>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_dian39"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/common_top_color"
                        android:textSize="@dimen/common_text_14sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/common_top_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:id="@+id/tv5"
                        android:textColor="@color/common_top_color"
                        android:textSize="@dimen/common_text_18sp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="@color/common_top_color"/>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_dian39"
                        android:background="@color/common_top_color"
                        android:gravity="center"
                        android:text="平均分"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_text_14sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
