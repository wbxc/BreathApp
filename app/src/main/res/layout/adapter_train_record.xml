<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="15dip"
            android:layout_width="match_parent"
            android:paddingBottom="15dp"
            android:id="@+id/left_content"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/go_detail"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/train_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/common_color_343434"
                android:text="2015年12月4日"/>
            <TextView
                android:layout_below="@+id/train_time"
                android:id="@+id/train_value"
                android:text="呼吸控制达标率 98% "
                android:textSize="16sp"
                android:textColor="@color/common_color_343434"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_detail"
            android:src="@mipmap/icon_common_go_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/common_color_d5d5d5"
        android:layout_height="5dip"/>
</LinearLayout>