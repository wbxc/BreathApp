    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_alpha_out</item>
        <item name="android:windowExitAnimation">@anim/popup_alpha_in</item>
    </style>

    <style name="item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="item_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="FullScreenDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/title_transparent_black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="horizontal_line_style">
        <item name="android:background">@color/line_and_outline_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="common_back">
        <item name="android:layout_height">@dimen/common_dian50</item>
        <item name="android:layout_width">@dimen/common_dian50</item>
    </style>
    <style name="common_activity_style" parent="@style/Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="Theme_Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="progress_style" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">51dp</item>
        <item name="android:maxHeight">51dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="roomRatingBar"  parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="level_star_Bar"  parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/level_control_star</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="level_report_star_Bar"  parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/level_report_control_star</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>



    <style name="level_moon_Bar"  parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/level_strength_moon</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="level_report_moon_Bar"  parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/level_report_strength_moon</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>


    <style name="level_sun_Bar"  parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/level_prenster_sun</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="level_report_sun_Bar"  parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/level_report_prenster_sun</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

















    <style name="self_define_ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal" >
        <item name="android:minHeight">@dimen/common_dian39</item>
        <item name="android:maxHeight">@dimen/common_dian39</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/self_define_progress</item>
    </style>

    <style name="start_train_ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal" >
        <item name="android:minHeight">@dimen/common_dian51</item>
        <item name="android:maxHeight">@dimen/common_dian51</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/start_train_progress</item>
    </style>


    <style name="common_dialog" parent="@android:style/Theme.Dialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="common_dialog2" parent="@android:style/Theme.Dialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>
